<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="word"
            type="com.fortie40.newword.roomdatabase.WordModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/word"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{word.wordLearned}"
                    android:textAlignment="viewStart"
                    android:textColor="@color/from"
                    android:textSize="@dimen/msg_text_primary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{word.language}"
                    android:textColor="@color/subject"
                    android:textSize="@dimen/msg_text_secondary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/word"
                    app:layout_constraintStart_toStartOf="@+id/word"
                    app:layout_constraintTop_toBottomOf="@+id/word" />

                <TextView
                    android:id="@+id/meaning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{word.meaning}"
                    android:textColor="@color/message"
                    android:textSize="@dimen/msg_text_secondary"
                    app:layout_constraintEnd_toEndOf="@+id/language"
                    app:layout_constraintStart_toStartOf="@+id/language"
                    app:layout_constraintTop_toBottomOf="@+id/language" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>